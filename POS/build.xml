	<property name="debuglevel" value="source,lines,vars" />
	<property file="application.properties" prefix="app" />
	<property file="version.properties" prefix="version" />
	<property name="build.dir" value="${basedir}/build" />
	<property name="src.dir" value="${basedir}/src" />
	<property name="target" value="1.7" />
	<property name="source" value="1.7" />
	<property name="build.dir" value="build" />
	<property name="classes.dir" value="${build.dir}/classes" />
	<property name="jar.dir" value="${build.dir}/jar" />


	<path id="properties">
		<dirset dir="." />
	</path>
	<path id="compile.classpath">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
		<path id="properties">
			<dirset dir="." />
		</path>
	</path>

	<path id="POS.classpath">
		<pathelement location="${classes.dir}" />
		<!-- configuration -->
		<pathelement location="${conf.dir}" />
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
	</path>


	<target name="build" description="Build the system">
		<mkdir dir="${build.dir}" />
		<mkdir dir="${classes.dir}" />
		<javac srcdir="${src.dir}" destdir="${classes.dir}" debug="true" debuglevel="${debuglevel}" encoding="utf-8" compiler="modern" target="${target}" source="${source}" includeantruntime="false">
			<classpath refid="compile.classpath" />
		</javac>
	</target>




	<target name="init">
		<mkdir dir="${build.dir}" />
		<copy includeemptydirs="false" todir="${build.dir}">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>


	<target name="clean">
		<delete dir="${build.dir}" />
	</target>


	<target name="run" depends="build">
		<java classname="ee.ut.math.tvt.slicey4.Intro" classpathref="POS.classpath" fork="yes" />
		<java classname="ee.ut.math.tvt.salessystem.SalesSystem" classpathref="POS.classpath" fork="yes" />
		<jvmarg value="-Xdebug" />
		<jvmarg value="-Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=1044" />

	</target>


	<target name="dist" depends="build">

		<propertyfile file="version.properties" comment="version properties">
			<entry key="build.revision.number" type="int" default="0" operation="+" />
		</propertyfile>

		<mkdir dir="${jar.dir}" />
		<jar destfile="${jar.dir}/${app.team.name}.jar" basedir="${classes.dir}">

			<zipgroupfileset dir="lib" includes="**/*.jar" />
			<fileset dir="." includes="*.properties logo.png" />
			<manifest>
				<attribute name="Main-Class" value="${main-class}" />
				<!--<attribute name="Class-Path" value=". etc/" />-->
			</manifest>

		</jar>

	</target>


	<target name="jrun" depends="dist">
		<java classname="ee.ut.math.tvt.slicey4.Intro" classpathref="POS.classpath" fork="yes" />
		<java classname="ee.ut.math.tvt.salessystem.SalesSystem" classpathref="POS.classpath" fork="yes" />
		<java jar="${jar.dir}/${app.team.name}.jar" fork="true" />

	</target>

	<target name="git_commit" >
		<input message="Commit message" addproperty="commit.message" />
		<echo message="Commiting all changes with message ${commit.message}" />
		<exec executable="git" dir="${basedir}" failifexecutionfails="false" errorproperty="">
			<arg value="add" />
			<arg value="-A" />
		</exec>
		<exec executable="git" dir="${basedir}" failifexecutionfails="false" errorproperty="">
			<arg value="commit" />
			<arg value="-m" />
			<arg value="${commit.message}" />
		</exec>
		<exec executable="git" dir="${basedir}" failifexecutionfails="false" errorproperty="">
			<arg value="push" />
		</exec>
	</target>



